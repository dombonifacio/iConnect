

<div class="container px-4 my-3" id="contacts">
    <h1 class="fs-2 fw-light">Favourites</h1>
    <!-- HR TAG TO GIVE COLOUR. BELOW THE CONTACTS H1 TEXT -->
    <div style="background-color: #63b4ff; height: 3px;">
    </div>
   
    <div class="row g-3 mt-3">
        @if (Model == null)
        {
            <p>No Favourites Found.</p>
        }
        else
        {
            @foreach (var p in Model)
            {

                <div class="col col-sm-4">
                    <div class="card">

                        <div class="card-body">
                            <div class="line-height-name fw-lighter d-flex justify-content-between my-auto">
                                <div>
                                    <h5 class="card-title">@p.FirstName @p.LastName</h5>
                                    <p>@p.Relationship, @p.Organization</p>
                                </div>

                                <form asp-action="DeleteFavouritesContactsPage" method="post" asp-route-id="@p.ContactID">
                                    <button class="btn">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                        </svg>
                                    </button>
                                </form>
                            </div>


                            <p class="card-text fw-light">
                                <svg xmlns="http://www.w3.org/2000/svg" class="me-2" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                                    <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                                </svg>@p.Email
                            </p>


                            <p class="card-tex fw-light">
                                <svg xmlns="http://www.w3.org/2000/svg" class="me-2" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                </svg>@p.Phone
                            </p>




                        </div>

                    </div>
                </div>

            }
        }



    </div>
</div>